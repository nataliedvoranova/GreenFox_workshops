@using lionkingaccount.Models
@model List<BankAccount>
<!DOCTYPE html>
<html>

<head>

</head>
<body>
    <table>
        <thead>
            <tr>
                <th>No.</th>
                <th>Name</th>
                <th>Balance</th>
                <th>Animal Type</th>
                <th>King?</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (BankAccount bankAccount in Model)
            {
                <tr>
                    <td>@(Model.IndexOf(bankAccount) + 1)</td>
                    <td>@bankAccount.Name</td>
                    <td>@bankAccount.Balance.ToString("0.00") Zebras</td>
                    <td>@bankAccount.AnimalType </td>
                    <td>@if (bankAccount.IsKing)
                    { <p>X</p>}
                    else
                    {
                        <p>-</p>
                    }
                    </td>

               </tr>
            }
        </tbody>
    </table>
</body>
</html>